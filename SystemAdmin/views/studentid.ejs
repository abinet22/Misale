  text-align: center;
}

/* Style the student ID card */
.card {
  width: 100%;
  height: 100%;
  border: 1px solid #ccc;
  padding: 10px;
  box-sizing: border-box;
}

.card h1 {
  font-size: 18px;
  margin-bottom: 10px;
}

.card p {
  font-size: 14px;
  margin-bottom: 5px;
}

.card .photo {
  width: 60px;
  height: 80px;
  margin: 10px auto;
  background-color: #ccc;
}
@media print {
  .no-print {
    display: none;
  }
}
