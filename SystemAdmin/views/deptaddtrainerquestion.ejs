            <small class="">Upload Question From Excel Here <br><a href="/misaleacadamy/download/TrainerQuestion.xlsx" download><small>You Can Download Template Excel Here!</small></a>
            </small>
            <script>
              function showDiv() {
      var div = document.getElementById('myDiv');
      var div = document.getElementById('myDiv');
  if (div.style.display === 'none') {
    div.style.display = 'block';
  } else {
    div.style.display = 'none';
  }
    }
              </script>
            <form action="/misaleacadamy/dept/uploadtrainerquestions"   method="post" enctype="multipart/form-data">
             <div>
              <select class="form-control mb-2" name="courseupload">
                  <option value="0">Please Select Education Category </option>
                  <option value="All">All </option>
                   
                <% if(config.length > 0) { %>
                  <% var i =0 %>
                  <% config.forEach(function(row){ %>
                      <% i++ %>
                    
                          <% var type = row.config_type %>
                          <% if(type == "Education") {%>
                        
                            <option  value="<%= row.config_id %>"> <%= row.config_name %> </option>
                           
                       
                 <% } } )%>
         
            <%} %>

              </select>
             
             </div>
              <div>
                <% if(asstype ==="Continuous" || asstype ==="Continuous_Part_1" ||asstype ==="Continuous_Part_2"||asstype ==="Continuous_Part_3"||asstype ==="Continuous_Part_4"||asstype ==="Continuous_Part_5" ) {%>
                  <div class="form-group">
                  
                    <select class="form-control" name="asstype">
                      <option value="0">Please Select Continuous Part </option>
                      <option value="Continuous_1">Continuous Part 1 </option>
                      <option value="Continuous_2">Continuous Part 2 </option>
                      <option value="Continuous_3">Continuous Part 3 </option>
                      <option value="Continuous_4">Continuous Part 4 </option>
                    
                    </select>
                  </div>
               <% } else if(asstype ==="Final" || asstype ==="Final_Part_1" ||asstype ==="Final_Part_2"||asstype ==="Final_Part_3"||asstype ==="Final_Part_3" ) {%>
                <div class="form-group">
                  
                  <select class="form-control" name="asstype">
                    <option value="0">Please Select Final Part </option>
                    <option value="Final_1">Final Part 1 </option>
                    <option value="Final_2">Final Part 2 </option>
                    <option value="Final_3">Final Part 3 </option>
                    <option value="Final_4">Final Part 4 </option>
                  </select>
                </div>
             <% }  else { %>
              <input type="hidden" name="asstype" value="<%= asstype  %>">
            <% } %>
               </div>
