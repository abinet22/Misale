                  <div class="col-md-8">
                 
                  <input class="form-control form-control-sm" type="file" id="questionsFile" name="questionsFile">
                </div>
                <div class="col-md-4">
                  <button type="submit" class="btn btn-outline-primary btn-sm btn-block">Submit</button>
                </div>
              </div>
            
        
          </form>
            </div>
        </div>
        <form action="/misaleacadamy/dept/deptaddnewtrainerquestion"   method="post" >
            <div class="row">
                
